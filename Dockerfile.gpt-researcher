# GPT Researcher Core Container
# Based on the existing GPT Researcher setup

FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy GPT Researcher source code
COPY gpt_researcher/ ./gpt_researcher/
COPY backend/ ./backend/
COPY cli.py .
COPY main.py .

# Create necessary directories
RUN mkdir -p /app/data /app/logs

# Create startup script
RUN echo '#!/bin/bash\npython -m uvicorn backend.server.server:app --host 0.0.0.0 --port 8000' > start_gpt_researcher.sh
RUN chmod +x start_gpt_researcher.sh

# Expose port
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run GPT Researcher
CMD ["./start_gpt_researcher.sh"]