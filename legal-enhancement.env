# Legal Enhancement Environment Variables
# Copy this to .env and fill in your values

# OpenAI API Key (required for GPT Researcher integration)
OPENAI_API_KEY=your_openai_api_key_here

# GPT Researcher URL (internal container communication)
GPT_RESEARCHER_URL=http://gpt-researcher:8000

# Legal Enhancement URL (internal container communication)
LEGAL_ENHANCEMENT_URL=http://legal-enhancement:8001

# Optional: Custom model configurations
LEGAL_EMBEDDING_MODEL=BAAI/bge-large-en-v1.5
LEGAL_SIMILARITY_THRESHOLD=0.75
LEGAL_CHUNK_SIZE=1000
LEGAL_CHUNK_OVERLAP=200

# Optional: OCR and processing settings
OCR_LANGUAGE=en
USE_GPU=false
MAX_WORKERS=4

# Optional: Logging level
LOG_LEVEL=INFO